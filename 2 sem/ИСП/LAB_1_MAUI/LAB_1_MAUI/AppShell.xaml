<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LAB_1_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LAB_1_MAUI"
    Shell.FlyoutBehavior="Flyout"
    Title="LAB_1_MAUI"> 

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="HomeRoute"/>
    <ShellContent
        Title="Calculator"
        ContentTemplate="{DataTemplate local:Calculator}"
        Route="CalculatorRoute"/>
    <ShellContent
        Title="Progress Bar"
        ContentTemplate="{DataTemplate local:IntegralProgressBar}"
        Route="ProgressBarRoute"/>
    <ShellContent
        Title="Sport Teams"
        ContentTemplate="{DataTemplate local:TeamList}"
        Route="TeamListRoute"/>
    <ShellContent
        Title="Currency Converter"
        ContentTemplate="{DataTemplate local:CurrencyConverter}"
        Route="CurrencyConverterRoute"/>

</Shell>
